  },
  "hyprland/workspaces": {
    "format": "<span font='18px'>{name}: {icon}</span>",
    "format-icons": {
		"1": "ï’ª",
		"2": "ï’ª",
		"3": "ï’ª",
		"4": "ï’ª",
		"5": "ï’ª",
